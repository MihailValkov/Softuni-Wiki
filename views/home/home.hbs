<section id="featured">
    <h2>Latests articles</h2>
    {{#each articles}}
    <article>
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <div class="controls">
            <a href="/article/details/{{_id}}">Read more</a>
        </div>
            <p>{{createdAt}} by {{author.username}}</p>
    </article>
    {{/each}}
</section>